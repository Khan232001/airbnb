<% layout('listings/layouts/boilerplate') %>
<div class="container my-5">
  <h3>Create a New Listing</h3>
  <form method="POST" action="/listings" novalidate class="need-validation" enctype="multipart/form-data">
    <div class="row mb-3">
      <div class="col-md-8">
        <label class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          class="form-control"
          placeholder="Add a catchy title"
          enctype="multipart/form-data"
          minlength="5"
          required
        />
      </div>
      <div class="col-md-4">
        <label class="form-label">Price</label>
        <input
          type="number"
          name="listing[price]"
          class="form-control"
          placeholder="e.g., 1200"
          required
        />
        <div class="valid-feedback">Title looks okay!</div>
      </div>
    </div>

    <div class="mb-3">
      <label class="form-label">Description</label>
      <textarea
        name="listing[description]"
        class="form-control"
        rows="4"
        placeholder="Describe your listing"
        required
      ></textarea>
    </div>

    <!-- <div class="mb-3">
      <label class="form-label">Image Link</label>
      <input
        type="text"
        name="listing[image]"
        class="form-control"
        placeholder="enter image URL / link"
      />
    </div> -->
 <div class="mb-3">
      <label class="form-label">Upload Image</label>
      <input
        type="file"
        name="listing[image]"
        class="form-control"
      />
      
    </div>
    <div class="row mb-4">
      <div class="col-md-6">
        <label class="form-label">Country</label>
        <input
          type="text"
          name="listing[country]"
          class="form-control"
          placeholder="e.g., USA"
          required
        />
      </div>
      <div class="col-md-6">
        <label class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          class="form-control"
          placeholder="e.g., Dallas, TX"
          required
        />
      </div>
    </div>

    <button type="submit" class="btn btn-danger">Add</button>
  </form>
</div>
